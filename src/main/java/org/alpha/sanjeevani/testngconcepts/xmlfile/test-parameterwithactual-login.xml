<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">

    <test name="Login TestParameter1">
        <parameter name="browser" value="chrome"/>
        <parameter name="userName" value="standard_user"/>
        <parameter name="Password" value="secret_sauce"/>
        <parameter name="type" value="valid"/>
        <classes>
            <class name="org.alpha.sanjeevani.testngconcepts.parameterization.TestParametersWithActualLogin"/>
        </classes>
   </test>
   <!--  locked_out_user UserName, Password-->
    <test name="Login TestParameter2">
        <parameter name="browser" value="chrome"/>
        <parameter name="userName" value="locked_out_user"/>
        <parameter name="Password" value="secret_sauce"/>
        <parameter name="type" value="locked_out_user"/>
        <classes>
            <class name="org.alpha.sanjeevani.testngconcepts.parameterization.TestParametersWithActualLogin"/>
        </classes>
    </test>

   <!-- invalid UserName, invalid Password-->

    <test name="Login TestParameter3">
        <parameter name="browser" value="edge"/>
        <parameter name="userName" value="standard_user123"/>
        <parameter name="Password" value="secret_sauce123"/>
        <parameter name="type" value="invalid"/>
        <classes>
            <class name="org.alpha.sanjeevani.testngconcepts.parameterization.TestParametersWithActualLogin"/>
        </classes>
    </test>

    <!-- valid UserName, invalid Password-->
    <test name="Login TestParameter4">
        <parameter name="browser" value="edge"/>
          <parameter name="userName" value="standard_user"/>
          <parameter name="Password" value="secret_sauce21"/>
          <parameter name="type" value="invalidPass"/>
          <classes>
              <class name="org.alpha.sanjeevani.testngconcepts.parameterization.TestParametersWithActualLogin"/>
          </classes>
      </test>
</suite>